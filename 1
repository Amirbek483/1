            list.push(item);
            localStorage.list = JSON.stringify(list);
            console.log(list)
    }
    function render() {
        document.getElementById('render').innerHTML='';
        for(var i=0;i<list.length;i++){
            var e = document.createElement('div');
            e.className='c';
            e.innerHTML =
            document.getElementById('render').appendChild(e)
        }
